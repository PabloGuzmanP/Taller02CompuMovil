<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/botoncamara"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="190dp"
        android:backgroundTint="#05D8F9"
        android:drawableTop="@drawable/baseline_camera_alt_24"
        android:text="CAMARA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="cargarImagen"/>

    <Button
        android:id="@+id/botonmapas"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="400dp"
        android:backgroundTint="#4AEC52"
        android:drawableTop="@drawable/baseline_map_24"
        android:paddingTop="10dp"
        android:text="MAPAS"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>